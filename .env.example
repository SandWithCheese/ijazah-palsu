# Application Environment
NODE_ENV=production
APP_PORT=3000
APP_HOST=0.0.0.0

# PostgreSQL Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ijazah_palsu
POSTGRES_PORT=5436

# Database URL for Drizzle ORM
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/ijazah_palsu

# For local development (when not using Docker)
# DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5436/ijazah_palsu

# Ganache / Blockchain Configuration
GANACHE_PORT=8545
GANACHE_NETWORK_ID=5777
GANACHE_MNEMONIC=test test test test test test test test test test test junk
GANACHE_ACCOUNTS=10
GANACHE_BALANCE=100
GANACHE_GAS_LIMIT=10000000

# Web3 Configuration
# For Docker (containers communicate via service names)
WEB3_PROVIDER_URL=http://ganache:8545
# For local development (access from host machine)
# WEB3_PROVIDER_URL=http://localhost:8545

# Next public variables (accessible in browser)
NEXT_PUBLIC_CHAIN_ID=5777
NEXT_PUBLIC_RPC_URL=http://localhost:8545

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_DIR=./public/uploads

# IPFS Configuration (optional - for production)
# IPFS_API_URL=https://api.pinata.cloud
# IPFS_API_KEY=your_pinata_api_key
# IPFS_API_SECRET=your_pinata_api_secret

